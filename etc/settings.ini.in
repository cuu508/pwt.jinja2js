[server:main]
use = egg:Paste#http
host = 0.0.0.0
port = 8000

[composite:main]
use = egg:Paste#urlmap
/ = home
/favicon.ico = static

/soy = soy_templates

/closure = closure
/media = static

[app:soy_templates]
use = egg:pwt.jinja2js
url = /soy/
packages = pwt.jinja2js
autoescape = autoescaped.soy

[app:static]
use = egg:Paste#static
document_root = ${buildout:directory}/src/pwt/jinja2js/media

[app:closure]
use = egg:Paste#static
document_root = ${closure-library:location}/closure-library

[app:home]
paste.app_factory = pwt.jinja2js.app:main

# configure Jinja2 loader
packages = pwt.jinja2js

deps_js = /media/${deps.js:filename}

compiled_tests_js = /media/${compiled_tests.js:filename}
